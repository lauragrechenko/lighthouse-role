server {
    listen {{ lighthouse_listen_port }} default_server;
    server_name {{ server_name }};

    root {{ lighthouse_location_dir }};
    index index.html;

    access_log /var/log/nginx/lighthouse_access.log;
    error_log  /var/log/nginx/lighthouse_error.log;

    # Reverse proxy to ClickHouse HTTP API under /clickhouse/
    location /clickhouse/ {
        proxy_pass http://{{ clickhouse_host }}:{{ clickhouse_port }}/;
        proxy_http_version 1.1;
        proxy_buffering off;
        proxy_read_timeout 300s;
        proxy_connect_timeout 30s;
        proxy_set_header Host              $host;
        proxy_set_header X-Real-IP         $remote_addr;
        proxy_set_header X-Forwarded-For   $proxy_add_x_forwarded_for;
        proxy_set_header Connection        "";
    }

    location / {
        try_files $uri $uri/ =404;
    }
}